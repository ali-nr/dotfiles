# Local secrets template
# Copy this file to ~/.secrets.zsh and fill in your actual values
#
# Usage:
#   cp ~/dev/dotfiles/secrets.zsh.template ~/.secrets.zsh
#   # Edit ~/.secrets.zsh with your actual keys
#
# NEVER commit ~/.secrets.zsh to git!

# Anthropic (Claude API)
export ANTHROPIC_API_KEY="<your-anthropic-api-key>"

# OpenAI (GPT/Codex API)
export OPENAI_API_KEY="<your-openai-api-key>"

# Google AI / Gemini
export GOOGLE_GENERATIVE_AI_API_KEY="<your-google-ai-api-key>"
export GEMINI_API_KEY="$GOOGLE_GENERATIVE_AI_API_KEY"
